{# partials/home/blog_grid.html.twig #}
<section class="section-overlap bg-white text-black relative z-10 py-32 px-6 lg:px-12 border-t border-b border-black" id="blog-preview">
    <div class="max-w-7xl mx-auto">
        <div class="flex justify-between items-end mb-16 js-reveal border-b-2 border-black pb-8">
