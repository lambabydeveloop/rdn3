{% extends 'base.html.twig' %}

{% block body %}
<article class="max-w-4xl mx-auto px-4 py-16">
    <a class="text-red-600" href="{{ path('app_blog_index') }}">← Назад в блог</a>
    <h1 class="text-4xl font-bold mt-4 mb-3">{{ post.title }}</h1>
    <p class="text-gray-500 mb-8">{{ post.publishedAt|date('d.m.Y') }}</p>
    <div class="prose max-w-none">
        {{ post.content|nl2br }}
    </div>
</article>
{% endblock %}
